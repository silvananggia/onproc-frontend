server {
    listen 80;
    server_name localhost;

    root /usr/share/nginx/html;
    index index.html;

    location / {
        try_files $uri /index.html;
    }

    location /ba-processing/ {
        proxy_pass http://10.28.12.103:5000/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
    }

    location /be/ {
        proxy_pass http://10.28.12.103:9000/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
    }

    location /service/ {
        proxy_pass http://10.28.12.103:8080/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
    }

    location /stac/ {
        proxy_pass http://10.28.12.103:8082/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
    }

    location /data/ {
        proxy_pass /data/;
	autoindex on;
        autoindex_exact_size off;
        autoindex_localtime on;
    }

}
