server {
    listen 80;
    server_name localhost;

    root /usr/share/nginx/html;
    index index.html;

    location / {
        try_files $uri /index.html;
    }
    
}


events {}

http {
    server {
        listen 80;

        location /service1/ {
            proxy_pass http://service1:3000/;
            proxy_set_header Host $host;
        }

        location /service2/ {
            proxy_pass http://service2:5000/;
            proxy_set_header Host $host;
        }
    }
}
